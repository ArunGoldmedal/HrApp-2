<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:layout_margin="@dimen/dp_4">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imv_location"
        android:layout_width="@dimen/small_icon_width"
        android:layout_height="@dimen/small_icon_height"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp_8"
        android:src="@drawable/ic_outline_location"
        app:civ_circle_background_color="@color/light_gray" />

    <TextView
        android:id="@+id/text_view_name"
        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toEndOf="@+id/imv_location"
        android:gravity="center_vertical"
        android:text="@string/dash"
        android:textStyle="bold"
        tools:text="Header" />


    <TextView
        android:id="@+id/text_view_address"
        style="@style/TextAppearance.MdcTypographyStyles.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_name"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_toEndOf="@+id/imv_location"
        android:gravity="center_vertical"
        android:text="@string/dash"
        tools:text="Address" />


</RelativeLayout>