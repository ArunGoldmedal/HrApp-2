<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/dp_16">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorOrange"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <!--                <ImageView-->
            <!--                    android:layout_width="@dimen/small_icon_height"-->
            <!--                    android:layout_height="@dimen/small_icon_height"-->
            <!--                    android:layout_margin="@dimen/dp_8"-->
            <!--                    android:scaleType="fitXY"-->
            <!--                    android:src="@drawable/success" />-->

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie"
                android:layout_width="@dimen/large_icon_width"
                android:layout_height="@dimen/large_icon_height"
                android:scaleType="fitXY"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/check_animation"
                app:lottie_loop="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:text="@string/str_success"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorWhite" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_32"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_punch_type"
                style="@style/large_extra_bold_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:text="In" />

            <TextView
                android:id="@+id/txt_punch_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:gravity="center"
                android:text=""
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="@dimen/common_button_width"
                android:layout_height="@dimen/common_button_height"
                android:background="@drawable/color_checkin"
                android:gravity="center"
                android:text="@string/str_ok"
                android:textColor="#FFFFFF" />

        </LinearLayout>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
