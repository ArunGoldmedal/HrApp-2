<resources>

    <!-- Base application theme. -->
    <!--    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!--        <item name="colorSecondary">@color/teal_200</item>-->
        <item name="colorSecondary">@color/colorCyan</item>
        <item name="colorSecondaryVariant">@color/material_grey_700</item>
        <item name="colorOnSecondary">@color/colorBlack</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearanceOverlay.LargeComponents</item>
<!--        <item name="snackbarStyle">@style/MySnackBarStyle</item>-->
    </style>

    <style name="FullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <!--    <style name="ThemeWithActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">-->
    <style name="ThemeWithActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorCyan</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearanceOverlay.LargeComponents</item>
<!--        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearanceOverlay.MediumComponents</item>-->

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="spinnerStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="smsp_errorTextColor">@color/error_color</item>
        <item name="smsp_floatingLabelColor">@color/floating_color</item>
        <item name="smsp_underlineColor">@color/underline_color</item>
        <item name="smsp_errorTextSize">13sp</item>
        <item name="smsp_itemSize">14sp</item>
        <item name="smsp_hintSize">14sp</item>
    </style>


